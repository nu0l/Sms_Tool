<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sms.sms_tool.aliyun.controller.QuerySmsController">
    <Label text="查询短信" style="-fx-font-size: 18px;" />
    <TextField fx:id="phoneNumberField" promptText="请输入手机号" />
    <TextField fx:id="queryDateField" promptText="请输入查询日期 (例如 20181225 格式)" />
    <TextField fx:id="pageSizeField" promptText="请输入查询短信数量" />
    <TextField fx:id="currentPageField" promptText="请输入查询页码" />
    <Button text="查询" onAction="#querySms" />
    <TextArea fx:id="resultArea" editable="false" promptText="结果显示" />
</VBox>
